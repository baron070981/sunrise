#:import MDIconButton kivymd.uix.button


<InfoScreen>:
    id:infoscreen
    name:"infoscreen"
    info:info
    canvas:
        Color:
            rgba:.8,.8,.7,.5
        Rectangle:
            source: str(app.image_dir) + "/sunrise2.jpg"
            pos:self.pos
            size:self.size
    
    FloatLayout:
        orientation: "vertical"
        padding: 20
        spacing: 20
        size:self.size
        
        MDLabel:
            id:info
            text: root.infodata
            text_color: 1,1,1,1
            halign:"left"
            pos_hint: {"center_x":.5, "center_y":.5}
            size_hint: (.4, .5)
            font_style:"H5"
    
        MDIconButton:
            id:backbutton
            icon: str(app.image_dir) + "/backicon128b.png"
            pos_hint: {"center_x": .05, "center_y": .94}
            on_press:
                root.step_back()








