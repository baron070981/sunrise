#: import MDLabel kivymd.uix.label 
#: import MDTextField kivymd.uix.textfield
#: import Path pathlib



<MainLayout>:
    id:mainlayout
    name:'mainlayout'
    canvas:
        Color:
            rgba:.8,.8,.7,.5
        Rectangle:
            source: str(app.image_dir) + "/sunrise2.jpg"
            pos:self.pos
            size:self.size
    FloatLayout:
        orientation: "vertical"
        padding: 20
        spacing: 20
        
        MDLabel:
            id:date_info
            text: root.dinfo
            theme_text_color: "Custom"
            text_color: 1,.4,.3,1
            halign:"center"
            pos_hint: {"center_x":.5, "center_y":.8}
            size_hint: (.3, .1)
            font_style:"H4"
        
        MDLabel:
            id:time_info
            text: root.tinfo
            theme_text_color: "Custom"
            text_color: 1,.4,.3,1
            halign:"center"
            pos_hint: {"center_x":.5, "center_y":.7}
            size_hint: (.3, .1)
            font_style:"H3"
        
        BoxLayout:
            orientation: "vertical"
            padding: 20
            spacing: 20
            size_hint: 1, .2
            pos_hint: {"center_x":.5, "center_y":0.42}
            
            MDFillRoundFlatButton:
                text: "выбрать дату"
                text_color: "blue"
                font_size: "22sp"
                pos_hint: {'center_x': .5, 'center_y': .5}
                size_hint: (0.35, None)
                md_bg_color: (1, 0, 0, .3)
                on_release: root.show_date_picker()
            
            MDFillRoundFlatButton:
                text: "сегодня"
                text_color: "blue"
                font_size: "22sp"
                pos_hint: {'center_x': .5, 'center_y': .5}
                size_hint: (0.35, None)
                md_bg_color: (1, 0, 0, .3)
                on_release: root.today_data()
    
    


















